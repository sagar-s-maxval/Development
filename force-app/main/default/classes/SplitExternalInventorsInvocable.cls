    public static List<List<SymphonyIPM__Inventor__c>> splitExternalInventors(List<ConversionInput> input) {
        List<List<SymphonyIPM__Inventor__c>> resultList = new List<List<SymphonyIPM__Inventor__c>>();

        for (ConversionInput inputValue : input) {
            List<SymphonyIPM__Inventor__c> inventors = new List<SymphonyIPM__Inventor__c>();
            List<String> emails = inputValue.externalInventorsEmails?.split(',');
            List<String> names = inputValue.externalInventorsNames?.split(',');
            for (Integer j = 0; j < emails.size(); j++) {
                String name = '';
                if (names?.size() >= j) {
                    name = names.get(j);
                }
                inventors.add(new SymphonyIPM__Inventor__c(SymphonyIPM__Email__c = emails?.get(j), Name = name));
            }
            resultList.add(inventors);
        }

        return resultList;
    }

